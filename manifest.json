{
  "manifest_version": 3,
  "name": "Chat Navigator Minimap",
  "version": "0.1.1",
  "description": "Right-side minimap navigator for ChatGPT (and other chat sites).",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "src/core/utils.js",
        "src/adapters/base.js",
        "src/adapters/chatgpt.js",
        "src/adapters/registry.js",
        "src/core/navigator.js",
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}